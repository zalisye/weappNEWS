.view_style{
  width:90%;
  border-radius: 2%; 
  background-color: white;
  margin: 0 auto;
}

.button_bar{
  width: 100%;
  height: 8%;
  margin-top: 3%;
  background-color: RGB(231,231,231);
  overflow: hidden;
}

.button_style{
  width: 50%;
  height: 100%;
  margin: 0;
  font-weight: 400;
  background-color: RGB(231,231,231);
  float: right;
}

.detail_view{
  padding-top: 3%;
  width: 100%;
  justify-content: space-between;
  background-color: RGB(231,231,231);
}

.img_style{
  text-align: center;
  max-width: 100%;
  max-height: 300rpx;
  overflow: hidden;
  background-color: white;
  margin: 0 auto;
}

.text_view{
    margin-bottom: 5%;
    font-family: microsoft yahei;
}

.title{
    font-weight: 400;
    white-space: nowrap;
    color: RGB(20,20,20);
    text-overflow:ellipsis;
    font-family: microsoft yahei;
    text-align: center;
    font-size:large;
    padding:2%;
    overflow: hidden;
}

.abstract{
    font-size:small;
    overflow: hidden;
    word-break: break-all;
    text-overflow: ellipsis;
    padding: 3%;
    padding-bottom: 10%;
}

.audioIcon{
  width: 100%;
  height: 85rpx;
  margin-right: 20rpx;
}

.audioView{
  width:20%;
  margin-right: 2%;
  margin-top:5%;
  padding-top: 25rpx;
  height: 100%;
  background-color: white;
  float: right;
  overflow: hidden;
}

.speak{
  font-size:medium;
  font-weight:light;
  line-height: 100rpx;
}
